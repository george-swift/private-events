<div class="col-sm-6 p-3">
  <div class="card">
    <div class="card-header">
      <h4 class="card-title"><%= link_to event.name, event_path(event) %></h4>
    </div>
    <div class="card-body">
      <p class="card-text"><%= truncate(event.description) %></p>
      <p class="details text-muted">
        &bull;&nbsp;Date: &nbsp;<%= long_format(event.date) %><br>
        &bull;&nbsp;Created by: &nbsp;<%= event.creator.name %>
      </p>
      <% if logged_in? %>
        <%= link_to 'Register', query(event), class: "btn btn-success #{disable(current_user, event.id)}", method: :post %>
      <% end %>
    </div>
  </div>
</div>