<h1>Sign Up</h1> 
<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
    <%= form_with model: @user, local: true do |f| %> 
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br>
      <%= f.submit "Join", class: 'btn btn-primary' %>
    <% end %>  
  </div> 
</div> 